buildscript{ //code for plugin dependencies management
    ext{ //global variable
        springBootVersion = '2.2.6.RELEASE'
        springCloudVersion= 'Hoxton.SR3'
        buildVersion = '0.0.1-SNAPSHOT'
    }
    repositories{
        mavenCentral() //자동화 빌드 도구는 gradle, 라이브러리는 저장소 mavenCentral, jcenter에서 받아옴
        jcenter()
    }
    dependencies{
        classpath("org.springframework.boot:spring-boot-gradle-plugin:${springBootVersion}")
    }
}

plugins {
	id 'org.springframework.boot' version '2.2.6.RELEASE'
	id 'io.spring.dependency-management' version '1.0.9.RELEASE'
	id 'java'
}

jar {

    baseName = "wcafe-msa"
    version = "${buildVersion}"

    manifest {

        attributes 'Title': 'api-gateway',
                   'Version': 1.0,
                   'Main-Class': 'com.js.wcafeApiGateway.WcafeApiGatewayApplication'
    }

    from {

        configurations.compile.collect {

            it.isDirectory() ? it : zipTree(it)

        }

    }

}


group = 'com.js.wcafeApiGateway'
version = '0.0.1-SNAPSHOT'
sourceCompatibility = '1.8'

dependencies {
	implementation 'org.springframework.boot:spring-boot-starter-security'
	implementation 'org.springframework.cloud:spring-cloud-starter-netflix-eureka-client'
    implementation 'org.springframework.cloud:spring-cloud-starter-netflix-zuul'
	implementation 'org.mybatis.spring.boot:mybatis-spring-boot-starter:2.1.2' 
	compile 'org.projectlombok:lombok:1.18.6'
	runtimeOnly 'mysql:mysql-connector-java'
    testImplementation 'org.springframework.boot:spring-boot-starter-test'
}

dependencyManagement {
    imports {
        mavenBom "org.springframework.cloud:spring-cloud-dependencies:${springCloudVersion}"
    }
}

test {
	useJUnitPlatform()
}
